{
  "plugins": ["@prettier/plugin-lua"],
  "overrides": [
    {
      "files": "*.lua",
      "options": {
        "parser": "lua",
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": true,
        "trailingComma": "none",
        "semi": false,
        "printWidth": 80,
        "luaIndentType": "spaces",
        "luaIndentWidth": 2,
        "luaLineEnding": "unix"
      }
    }
  ]
}
